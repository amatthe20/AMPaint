<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.Canvas?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" id="borderPane" prefHeight="200.0" fx:controller="ampaint.paintController"> 
    <top>
        <VBox>
            <MenuBar>
                <Menu text="_File">
                    <MenuItem accelerator="Shortcut+O" onAction="#onOpenFile" text="Open"/>
                    <MenuItem accelerator="Shortcut+S" onAction="#onSave" text="Save"/>
                    <MenuItem accelerator="Shortcut+Shift+S" onAction="#onSaveAs" text="Save As"/>
                    <MenuItem accelerator="Shortcut+X" onAction="#onClose" text="Close"/>
                </Menu>
                <Menu text="_Edit">
                    <MenuItem fx:id="undo" accelerator="Shortcut+Z" text="Undo"/>
                    <MenuItem fx:id="redo" accelerator="Shortcut+Y" text="Redo"/>
                    <MenuItem fx:id="copy" accelerator="Shortcut+C" text="Copy"/>
                    <MenuItem fx:id="paste" accelerator="Shortcut+V" text="Paste"/>
                </Menu>
                <Menu text="Tools">
                    <MenuItem text="Select"/>
                    <MenuItem fx:id="pencil" text="Pencil" onAction="#pencil"/>
                    <Menu text="Line">
                        <MenuItem fx:id="straight" text="Straight" onAction="#line"/>
                        <MenuItem fx:id="dashed" text="Dashed" onAction="#dashed"/>
                    </Menu>
                </Menu>
                <Menu text="Shapes">
                    <MenuItem text="Square" onAction="#aSquare"/>
                    <MenuItem text="Rectangle" onAction="#aRectangle"/> 
                    <MenuItem text="Circle" onAction="#aCircle"/>
                    <MenuItem text="Ellipse" onAction="#anEllipse"/>
                    <MenuItem text="Triangle" onAction="#aTriangle"/> 
                    <MenuItem text="New Shape" onAction="#aShape" />
                </Menu>
                <Menu text="Help">
                    <MenuItem text="Help" onAction="#onHelp"/>
                    <MenuItem text="About" onAction="#onAbout"/>
                </Menu>
            </MenuBar>
            <ToolBar>
                <HBox alignment="CENTER_RIGHT" spacing="8">
                    <Button fx:id="newTabButton" text="New Canvas" onAction="#addNewTab"/>
                    <Label fx:id="pixelColor"/>
                    <TextField fx:id="brushSize" text="10" promptText="Line Thickness"/>
                    <ColorPicker fx:id="colorPicker"/>
                    <CheckBox fx:id="eraser" text="Eraser" onAction="#erase" />
                    <Button onAction="#onClearCanvas" text="Clear Canvas"/>
                    <ToggleButton fx:id="colorGrabber" text="Color Grabber" onAction="#onColorGrab"/>
                    <ToggleButton fx:id="mode" text="Dark Mode" selected="false" onAction="#toggleDarkMode"/>
                </HBox>
            </ToolBar>
        </VBox>
    </top>

    <center>
        <TabPane fx:id="tabPane">
            <tabs>
                <Tab fx:id="tab" text="Untitled Canvas 1" closable="false">
                    <content>
                        <ScrollPane focusTraversable="false" hbarPolicy="AS_NEEDED" vbarPolicy="ALWAYS">
                            <content>
                                <ampaint.NewCanvas fx:id="canvas" />
                            </content>
                        </ScrollPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>

</BorderPane>